RewriteEngine On
RewriteBase /

# Redirect root to login.php
RewriteRule ^$ login.php [L]

# Block direct access to login.php
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /login\.php\ HTTP/ [NC]
RewriteRule ^login\.php$ / [R=302,L]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Rewrite /pages/dashboard to /pages/dashboard.php?page=dashboard (internally)
RewriteRule ^pages/dashboard/?$ /pages/dashboard/dashboard.php?page=dashboard [L,QSA]

# Optionally, rewrite other pages like you did for forgot_password
RewriteRule ^forgot_password/?$ /forgot_password.php?pages=forgot_password [L,QSA]
