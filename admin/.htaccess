RewriteEngine On
RewriteBase /admin/

# Redirect root /admin to login.php but keep the URL clean
RewriteRule ^$ login.php [L]

# Block direct access to login.php if accessed directly
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /admin/login\.php\ HTTP/ [NC]
RewriteRule ^login\.php$ /admin [R=302,L]

# Redirect HTTP to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]

# Rewrite /admin/forgot_password to /admin/forgot_password.php?pages=forgot_password
RewriteRule ^forgot_password_option/?$ /admin/forgot_password_option.php?pages=forgot_password [L,QSA]

# Rewrite /admin/forgot_password to /admin/forgot_password.php?pages=forgot_password
RewriteRule ^email_link_form/?$ /admin/email_link_form.php?pages=forgot_password [L,QSA]